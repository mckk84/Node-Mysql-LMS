    <%- include('../partials/errors.ejs') %>
    <div class="p-2 flex flex-col gap-2">
      <div class='mb-2 content-header border border-navy-100 px-2 py-1 flex align-middle justify-between'>
        <p class="font-medium text-2xl mb-0"><%=title%></p>
        <a class="font-medium text-sm py-1 mb-0 hover:text-indigo-500 hover:underline" href="/courses">Back</a>
      </div>
      <div class="w-full py-1 px-2">
        
        <form action='/courses/edit/<%=record.id%>' method='post'>
          <input type="hidden" name="id" value="<%=record.id%>" />
          <input type="hidden" name="created_by" value="<%=user.id%>" />
          <div class="mt-4 grid lg:grid-cols-1 gap-4">
            <div>
              <label for="course_code" class="text-sm text-gray-700 block mb-1 font-medium">Course Code</label>
              <input type="text" name="course_code" id="course_code" class="w-64 bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="Enter unique course code" required value="<%=record.course_code%>" />
            </div>
            <div>
              <label for="name" class="text-sm text-gray-700 block mb-1 font-medium">Course Name</label>
              <input type="text" name="name" id="name" value="<%=record.name%>" class="w-64 bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="Enter your name" required />
            </div>

            <div>
              <label for="type" class="text-sm text-gray-700 block mb-1 font-medium">Type</label>
              <input type="text" name="type" id="type" value="<%=record.type%>" class="w-64 bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="Type" required />
            </div>

            <div>
              <label for="description" class="text-sm text-gray-700 block mb-1 font-medium">Description</label>
              <textarea rows="3"  name="description" id="description" class="bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="Description" /><%=record.description%></textarea>
            </div>
            <div>
              <label for="is_active" class="text-sm text-gray-700 block mb-1 font-medium">Published</label>
              <select name="is_active" class="w-64 bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full">
                <option <%=(record.is_active==1)?'selected':''%> value="1">Yes</option>
                <option <%=(record.is_active==0)?'selected':''%> value="0">No</option>
              </select>
            </div>
          </div>

          <div class="space-x-4 mt-8">
            <button type="submit" class="py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50">Update</button>
          </div>
        </form>

      </div>    
    </div>