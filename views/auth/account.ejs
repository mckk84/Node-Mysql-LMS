<%- include('../partials/errors.ejs') %>
<div class="p-4 rounded border border-navy-100">
  <h1 class="font-medium text-3xl">Profile</h1>
  <p class="text-gray-600 mt-2"><%=user.type%></p>
  <form action='/account' method='post'>
    <input type="hidden" name="account_id" value="<%=user.id%>" />
    <div class="mt-4 grid lg:grid-cols-2 gap-10">
      <div>
        <label for="name" class="text-sm text-gray-700 block mb-1 font-medium">Name</label>
        <input type="text" name="name" id="name" value="<%=user.name%>" class="bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="Enter your name" />
      </div>

      <div>
        <label for="email" class="text-sm text-gray-700 block mb-1 font-medium">Email Adress</label>
        <input type="text" name="email" id="email" value="<%=user.email%>" class="bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="yourmail@provider.com" />
      </div>

      <div>
        <label for="mobile" class="text-sm text-gray-700 block mb-1 font-medium">Mobile No</label>
        <input type="text" name="mobile" id="mobile" value="<%=user.mobile%>" class="bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="" />
      </div>

      <div>
        <label for="brithday" class="text-sm text-gray-700 block mb-1 font-medium">Birthday</label>
        <input type="date" name="dob" id="brithday" value="<%=(user.dob != '') ? moment(user.dob).format('YYYY-MM-DD'):''%>" class="bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-full" placeholder="(01/01/1993)" />
      </div>
    </div>

    <div class="space-x-4 mt-8">
      <button type="submit" class="py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50">Save</button>
    </div>
  </form>
</div>
