<%- include('../partials/errors.ejs') %>
<div class="p-2 flex flex-col gap-2">
  <div class='mb-2 content-header border border-navy-100 px-2 py-1 flex align-middle justify-between'>
    <p class="font-medium text-2xl mb-0"><%=title%></p>
    <a class="font-medium text-sm py-1 mb-0 hover:text-indigo-500 hover:underline" href="/certificates">Back</a>
  </div>
  <div class="w-full py-1 px-2">    
    <form action='/certificates/add' method='post'>
      <input type="hidden" name="created_by" value="<%=user.id%>" />
      <input type="hidden" name="id" value="<%=certificate.id%>" />
      <div class="mt-4 grid lg:grid-cols-1 gap-4">
        <div>
          <label for="course_name" class="text-sm text-gray-700 block mb-1 font-medium">Course Name</label>
          <input type="text" name="course_name" disabled id="name" value="<%=course.name%>" class="w-64 bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700" />
        </div>

        <div>
          <label for="student_name" class="text-sm text-gray-700 block mb-1 font-medium">Student Name</label>
          <input type="text" name="student_name" disabled id="name" value="<%=student.name%>" class="w-64 bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700" />
        </div>

        <div>
          <label for="score" class="text-sm text-gray-700 block mb-1 font-medium">Student Score</label>
          <input type="number" name="score" id="score" value="" class="w-64 bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700" />
        </div>

        <div>
          <label for="remarks" class="text-sm text-gray-700 block mb-1 font-medium">Remarks</label>
          <textarea rows="3"  name="remarks" id="remarks" value="" class="w-64 bg-white border border-gray-500 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700" placeholder="Remarks" /></textarea>
        </div>
      </div>

      <div class="space-x-4 mt-8">
        <button type="submit" class="py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50">Save</button>
      </div>
    </form>

  </div>    
</div>