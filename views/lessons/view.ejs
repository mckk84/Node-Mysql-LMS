<%- include('../partials/errors.ejs') %>
<div class="p-2 flex flex-col gap-2">
  <div class='mb-2 content-header border border-navy-100 px-2 py-1 flex align-middle justify-between'>
    <p class="font-medium text-2xl mb-0"><%=title%></p>
    <a class="font-medium text-sm py-1 mb-0 hover:text-indigo-500 hover:underline" href="/courses/view/<%=course.id%>">Back</a>
  </div>
  <div class="w-full border py-1 px-2 bg-white">
    <div class="mt-2 mb-2 flex align-middle justify-between gap-4">
      <div>Course Name : <b><%=course.name%></b></div>
      <div>Type : <b><%=course.type%></b></div>
      <div>Instructor :<b><%=course.instructor%></b></div>
      <div>Published :<b><%=(course.is_active==1)?'Yes':'No'%></b></div>
    </div>
  </div>
  <div class="w-full border py-1 px-2 bg-white">
      <div class="mt-4 mb-2 flex align-middle justify-between gap-4">
        <div>Lesson Name : <b><%=lesson.name%></b></div>
        <% if( user.type == 'Student' && lesson_status != 'Completed' ) { %>
          <div><a data-lesson="<%=lesson.id%>" data-student="<%=user.id%>" data-action="Completed" data-course="<%=course.id%>" href="/students/status/lesson" class="inline-action-update inline-block text-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium text-sm px-5 py-2 text-center bg-blue-600">Mark as Complete</a>
          </div>
        <% } %>
      </div>

      <div class="w-full px-2 mb-2 py-2 border border-navy-100">
        <div class="w-full text-sm py-2 px-2">
          <%=lesson.description%>
        </div>
      </div>
   </div>

  </div>
</div>    
